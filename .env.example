# Core service configuration
ANALYTICS_APP_NAME=analytics-service
ANALYTICS_ENVIRONMENT=local
ANALYTICS_API_VERSION=v1
ANALYTICS_SERVICE_HOST=0.0.0.0
ANALYTICS_SERVICE_PORT=8000

# PostgreSQL connection
ANALYTICS_POSTGRES_USER=analytics
ANALYTICS_POSTGRES_PASSWORD=change-me
ANALYTICS_POSTGRES_HOST=localhost
ANALYTICS_POSTGRES_PORT=5432
ANALYTICS_POSTGRES_DB=analytics

# Kafka integration
ANALYTICS_KAFKA_BOOTSTRAP_SERVERS=localhost:9092
ANALYTICS_KAFKA_TOPIC=analytics.events
ANALYTICS_KAFKA_CONSUMER_GROUP=analytics-service
ANALYTICS_KAFKA_AUTO_OFFSET_RESET=earliest
# Optional SASL configuration
# ANALYTICS_KAFKA_SECURITY_PROTOCOL=SASL_SSL
# ANALYTICS_KAFKA_SASL_MECHANISM=PLAIN
# ANALYTICS_KAFKA_SASL_USERNAME=
# ANALYTICS_KAFKA_SASL_PASSWORD=

# Eureka service discovery
ANALYTICS_EUREKA_ENABLED=false
ANALYTICS_EUREKA_SERVICE_URL=http://localhost:8761/eureka/
ANALYTICS_EUREKA_APP_NAME=analytics-service
# ANALYTICS_EUREKA_INSTANCE_IP=127.0.0.1
# ANALYTICS_EUREKA_INSTANCE_HOST=analytics.local
ANALYTICS_EUREKA_HEARTBEAT_INTERVAL=30
ANALYTICS_EUREKA_REGISTRY_FETCH_INTERVAL=30

# Metrics defaults
ANALYTICS_METRICS_WINDOW_MINUTES=60
